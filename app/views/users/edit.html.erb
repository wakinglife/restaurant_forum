<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">
    <% if @user.errors.any? %>
      <h4>We have some errors here !</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <hr>
     <% end %>
     <!-- <% if @user.errors.present? %>
       <ul>
         <% @user.errors.each do |error, message| %>
           <li> <%= "#{error.capitalize}  #{message}" %></li>
         <% end %>
       </ul>
     <% end %> -->


    <h2> Edit Profile </h2>
    <tr>
    <%= form_for [@user] do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :intro, "About you" %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :avatar, "Avatar" %>
        <%= image_tag @user.avatar if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
      </div>
    <% end %>

   </div>
  </div>
</div>
